{
  "title": "Schema for the my actor",
  "type": "object",
  "schemaVersion": 1,
  "properties": {
    "url": {
      "title": "URL",
      "type": "string",
      "maxLength": 1000,
      "description": "URL of webpage to open",
      "editor": "textfield",
      "prefill": "https://apify.com/store"
    },

    "proxyUrl": {
      "title": "Proxy URL",
      "type": "string",
      "maxLength": 1000,
      "description": "Proxy to use (optional)",
      "editor": "textfield"
    },

    "delaySecs": {
      "title": "Delay",
      "type": "integer",
      "description": "Indicates how long to wait after loading the page, before taking the screenshot",
      "minimum": 0,
      "maximum": 180,
      "unit": "seconds"
    }
  },
  "required": [
    "url"
  ]
}
